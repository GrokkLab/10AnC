- model_class = @routine.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @routine.name
%p
  %strong= model_class.human_attribute_name(:category) + ':'
  %br
  = @routine.category
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @routine.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), routines_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_routine_path(@routine), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), routine_path(@routine), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
