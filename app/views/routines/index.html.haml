- model_class = Routine.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @routines.each do |routine|
      %tr
        %td= link_to routine.id, routine_path(routine)
        %td= routine.name
        %td= routine.category
        %td= routine.description
        %td=l routine.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_routine_path(routine), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), routine_path(routine), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_routine_path, :class => 'btn btn-primary'
